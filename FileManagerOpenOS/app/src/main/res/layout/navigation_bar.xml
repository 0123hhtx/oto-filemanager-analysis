<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#c3cad4"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="176dp"
        android:layout_height="32dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp">
            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_file_manager_retreat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="32dp">
            <ImageButton
                android:id="@+id/forword_btn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_file_manager_advance"/>
        </LinearLayout>
    </LinearLayout>
    <!--获取焦点，不让editer弹出键盘-->
    <View
        android:id="@+id/cancel_focused"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="#939aa3">
        <ImageButton
            android:id="@+id/view_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_file_manager_icon_model"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:background="#e9edf0">
        <ImageButton
            android:id="@+id/view_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_file_manager_list_model"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center"
        android:background="#e9edf0"
        android:layout_weight="5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:text="计算机>"/>
        <EditText
            android:id="@+id/current_path"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#000000"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center"
        android:background="#e9edf0"
        android:layout_marginRight="4dp"
        android:layout_weight="2">

        <EditText
            android:id="@+id/search_editor"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:textSize="12sp"
            android:textColorHint="#939aa3"
            android:textColor="#000000"
            android:singleLine="true"
            android:drawableRight="@drawable/magnifying_glass"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:hint="搜索"
            android:paddingLeft="8dp"
            />
    </LinearLayout>

</LinearLayout>