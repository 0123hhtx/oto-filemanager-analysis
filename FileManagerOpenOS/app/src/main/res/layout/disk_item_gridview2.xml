<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="248dp"
    android:layout_height="70dp"
    android:layout_marginTop="8dp">
    <LinearLayout
        android:id="@+id/disk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/disk_select_backgroud">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/left_textview"
            android:layout_height="@dimen/left_textview"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_file_manager_hard_disk"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="#000000"
                android:text="本地磁盘"/>
            <ProgressBar
                android:id="@+id/proessbar"
                android:layout_width="184dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressDrawable="@drawable/progress_color"
                android:max="100"
                android:progress="40"/>
            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="#9b9b9b"
                android:text="10GB可用，共16GB"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
